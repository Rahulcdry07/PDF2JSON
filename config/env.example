# PDF2JSON DSR System - Environment Variables

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=0
SECRET_KEY=change-this-to-a-random-secret-key

# Server Configuration
HOST=0.0.0.0
PORT=8000
MCP_WEB_PORT=5001

# Database Configuration
DATABASE_PATH=reference_files/civil/DSR_Civil_combined.db

# File Upload Configuration
MAX_UPLOAD_SIZE=104857600  # 100 MB in bytes
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=pdf,json,csv

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/pdf2json.log

# Performance Configuration
WORKERS=4
THREADS=2

# Security Configuration
CORS_ENABLED=false
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# MCP Server Configuration
MCP_SERVER_ENABLED=true
MCP_SERVER_NAME=pdf2json-dsr

# Feature Flags
ENABLE_PDF_CONVERSION=true
ENABLE_DSR_MATCHING=true
ENABLE_COST_ESTIMATION=true
ENABLE_MCP_WEB_INTERFACE=true

# Development Configuration (only for development)
# FLASK_ENV=development
# FLASK_DEBUG=1
